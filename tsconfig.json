{
  "compilerOptions": {
    "target": "es2022",                                  
    "module": "es2022",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "src",    
    "strict": true,                                      
    "skipLibCheck": true,
    "moduleResolution": "node",
    "typeRoots": [ "node_modules/@types", "types" ]
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src", "src/app", "src/engine"],
  "exclude": ["node_modules", "src/test"]
}
